@model IEnumerable<MVCDrugStoreManager.Models.CHI_TIET_DON_DAT_HANG>

@{
    ViewBag.Title = "PayBill";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-weight:bold;text-align:center">Quản lý đơn đặt hàng</h1>

<table id="customers" align="center" style="width:1150px">
    <tr>
        <th style="text-align:center">
            Mã đơn hàng
        </th>
        <th style="text-align:center">
            Số lượng
        </th>
        <th style="text-align:center">
            Đơn giá
        </th>
        <th style="text-align:center">
            Tình trạng
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.MaDDH)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td style="text-align:center">
                $ @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.DON_DAT_HANG.TinhTrangDonHang.TinhTrang)
            </td>
            <td style="text-align:center">
                <a href="@Url.Action("Suasp","Admin", new { id = item.MaSP})" style="padding:5px ;color:black; background-color:yellow; font-weight:bold">
                    Sửa
                </a>
                &nbsp;&nbsp;|&nbsp;&nbsp;
                <a href="@Url.Action("Chitietsp","Admin", new { id = item.MaSP })" style="padding:5px ;color:black; background-color:deepskyblue; font-weight:bold">
                    Chi tiết
                </a>
                &nbsp;&nbsp;|&nbsp;&nbsp;
                <a href="@Url.Action("Xoasp","Admin", new { id = item.MaSP })" style="padding:5px ;color:black; background-color:orangered; font-weight:bold">
                    Xóa
                </a>
            </td>
        </tr>
    }

</table>
