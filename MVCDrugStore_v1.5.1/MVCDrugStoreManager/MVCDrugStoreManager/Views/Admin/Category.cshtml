@model IEnumerable<MVCDrugStoreManager.Models.LOAI_SAN_PHAM>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-weight:bold">Quản lý loại sản phẩm</h1>

<button>
    @Html.ActionLink("Thêm mới", "Create")
</button>
<hr>
<table class="" border="1" style="width:1150px;text-align:center">
    <tr>
        <th>
            Mã loại SP
        </th>
        <th>
            Tên loại SP
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaLoaiSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoaiSP }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoaiSP })
            </td>
        </tr>
    }

</table>
