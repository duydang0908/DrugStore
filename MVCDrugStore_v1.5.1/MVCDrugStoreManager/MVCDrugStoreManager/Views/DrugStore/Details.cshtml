<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: limegreen;
        color: black;
        width: 120px;
        height: 35px;
        display: block;
        float: left;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: firebrick;
        }
</style>
@using MVCDrugStoreManager.Models

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center; font-weight:bold">Product Details</h1>

<div>
    <div style="width:40%; float: left;border-left:dotted 1px;border-color:azure">
        <img src="~/images/@Model.Images" style="width:520px ; height:400px" />
    </div>
    <div style="width:60%;float:left;padding:10px">
        <h2 style="font-weight:bold;color:red">Product name: @Model.TenSP</h2>
        <p style="text-align:justify"><span style="font-weight:bold">Category : </span>@Model.LOAI_SAN_PHAM.TenLoai</p>
        <p style="text-align:justify"><span style="font-weight:bold">Describe : </span>@Model.MoTa</p>
        <p style="text-align:justify"><span style="font-weight:bold; color:red; font-size:16pt">Price : </span>$ @String.Format("{0:0.00}", Model.DonGia)</p>
        <div id="Datmua">
            <a href="@Url.Action("ThemGiohang","GioHang",new {@iMaSP=@Model.MaSP,@strURL=Request.Url.ToString() }) ">
                Add To Cart
            </a>
        </div>
    </div>
    <dl class="dl-horizontal">
        <dt>
        </dt>
        <dd>
        </dd>
    </dl>
</div>


