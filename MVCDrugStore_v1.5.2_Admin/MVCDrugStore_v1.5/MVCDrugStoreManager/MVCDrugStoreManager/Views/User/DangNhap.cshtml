
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<h3 style="text-align:center">Đăng nhập</h3>
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td style="text-align:right">
                Tên đăng nhập :
            </td>
            <td>
                &nbsp; &nbsp;@Html.TextBox("TenDN")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td style="text-align:right">
                Mật khẩu :
            </td>
            <td>
                &nbsp; &nbsp;@Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="submit" value="Đăng nhập" />
            </td>
        </tr>
    }
</table>
<p style="text-align:center; font-weight:bold">Nếu chưa có tài khoản hãy <a href="@Url.Action("DangKy","User")">đăng ký</a></p>
