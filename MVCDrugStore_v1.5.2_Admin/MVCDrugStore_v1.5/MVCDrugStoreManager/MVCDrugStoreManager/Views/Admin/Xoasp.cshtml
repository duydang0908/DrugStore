@model MVCDrugStoreManager.Models.SAN_PHAM

@{
    ViewBag.Title = "Xoasp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÓA SẢN PHẨM</h2>

<h3>Bạn có muốn xóa sản phẩm này ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        @*Tên sản phẩm*@
        <dt>
            Tên sản phảm :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        @*Mã loại sản phẩm*@
        <dt>
            Loại sản phẩm :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LOAI_SAN_PHAM.TenLoai)
        </dd>
        @*Đơn vị tính*@
        <dt>
            Đơn vị tính :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DVT1.TenDVT)
        </dd>
        @*Số lượng tồn*@
        <dt>
            @Html.DisplayNameFor(model => model.SoLuongTon)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>
        @*Đơn giá*@
        <dt>
            Đơn giá :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia) $
        </dd>
        @*Ngày cập nhật*@
        <dt>
            Ngày cập nhật :
        </dt>
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
        </dd>
        @*Mô tả*@
        <dt>
            Mô tả :
        </dt>
        <dd style="width:600px;text-align:justify">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        @*Hình ảnh*@
        <dt>
            Hình ảnh :
        </dt>
        <dd>
            <img src="@Url.Content("~/images/"+ Model.Images)" width="120" />
        </dd>
        @*Button*@
        <dt>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-actions no-color">
                    <input type="submit" value="Xóa" class="btn btn-default" /> |
                    <button>@Html.ActionLink("Trở về", "Drug")</button>
                </div>
            }
        </dt>
    </dl>
</div>
