@model IEnumerable<MVCDrugStoreManager.Models.SAN_PHAM>
@{
    ViewBag.Title = "spTheoLoai";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1 style="text-align:center">Sản phẩm theo loại</h1>
<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active" style="align-content:center">
            <img class="d-block img-fluid" src="~/images/banner1.jpg" alt="First slide" style="width:900px;height:350px;">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/images/banner2.jpg" alt="Second slide" style="width:900px;height:350px;">
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/images/banner3.jpg" alt="Third slide" style="width:900px;height:350px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
                <a href="@Url.Action("Details", "User",new { id = product.MaLoaiSP })"><img class="card-img-top" src="~/images/@product.Images" alt="" style="" width="200" height="200"></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="@Url.Action("Details", "User",new { id = product.MaLoaiSP })">@product.TenSP</a>
                    </h4>
                    <h5>@product.DonGia</h5>
                    <p class="card-text">Số lượn còn: @product.SoLuongTon</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>
            </div>
        </div>
    }
</div>
<!-- /.row -->
<!-- /.col-lg-9 -->
