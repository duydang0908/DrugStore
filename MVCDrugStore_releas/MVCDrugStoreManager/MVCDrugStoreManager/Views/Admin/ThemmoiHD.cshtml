@model MVCDrugStoreManager.Models.CT_HOA_DON

@{
    ViewBag.Title = "ThemmoiHD";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="text-align:center;font-weight:bold">Thêm mới hóa đơn</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h3 style="text-align:center;font-weight:bold">Hóa đơn</h3>
        @*Khách hàng*@
        <div class="form-group">
            @Html.LabelFor(model => model.HOA_DON.NgayLapHD, "Mã khách hàng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HOA_DON.MaKH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HOA_DON.MaKH, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Ngày lập hóa dơn*@
        <div class="form-group">
            @Html.LabelFor(model => model.HOA_DON.NgayLapHD, "Ngày lập hóa đơn", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="NgayLapHD">
                @Html.ValidationMessageFor(model => model.HOA_DON.NgayLapHD, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Hình thức thanh toán*@
        <div class="form-group">
            @Html.LabelFor(model => model.HOA_DON.HinhThucThanhToan, "Hình thức thanh toán", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HOA_DON.HinhThucThanhToan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HOA_DON.HinhThucThanhToan, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Tổng tiền*@
        <div class="form-group">
            @Html.LabelFor(model => model.HOA_DON.TongTien, "Tổng tiền", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HOA_DON.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HOA_DON.TongTien, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <h3 style="text-align:center;font-weight:bold">Chi tiết hóa đơn</h3>
        @*Sản phẩm*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.MaSP, "Sản phẩm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("MaSP")
            </div>
        </div>
        @*ĐVT*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DVT, "Đơn vị tính", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DVT")
            </div>
        </div>
        @*Số lượng*@
        <div class="form-group">
            @Html.LabelFor(model => model.SoLuong, "Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Đơn giá*@
        <div class="form-group">
            @Html.LabelFor(model => model.DonGia, "Đơn giá", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Thành tiền*@
        <div class="form-group">
            @Html.LabelFor(model => model.ThanhTien, "Thành tiền", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ThanhTien, "", new { @class = "text-danger" })
            </div>
        </div>
        @*Button*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo" class="btn btn-default" /> |
                <button>
                    @Html.ActionLink("Trở về", "Bill")
                </button>
            </div>
        </div>
    </div>
}


