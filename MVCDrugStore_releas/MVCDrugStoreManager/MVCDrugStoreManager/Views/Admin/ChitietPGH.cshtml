    <dl class="dl-horizontal">
        @*Mã đơn đặt hàng*@
        <dt>
            Mã đơn đặt hàng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PHIEU_GIAO_HANG.MaDDH)
        </dd>
        @*Mã nhân viên*@
        <dt>
            Nhân viên
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PHIEU_GIAO_HANG.NHAN_VIEN.TenNV)
