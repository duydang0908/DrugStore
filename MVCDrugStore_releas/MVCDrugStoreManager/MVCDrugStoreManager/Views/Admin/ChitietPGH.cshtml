            @Html.DisplayFor(model => model.DVT)
        </dd>
        @*Số lượng*@
        <dt>
            Số lượng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        @*Đơn giá*@
        <dt>
            Đơn giá
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>
        @*Thành tiền*@
        <dt>
            Thành tiền
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThanhTien)
        </dd>
        <br>
        <dd>
            <button>
                @Html.ActionLink("Trở về", "Ship")
            </button>
        </dd>
    </dl>
</div>

