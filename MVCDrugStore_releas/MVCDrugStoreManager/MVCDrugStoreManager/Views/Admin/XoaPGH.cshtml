@model MVCDrugStoreManager.Models.CHI_TIET_PHIEU_GIAO_HANG

@{
    ViewBag.Title = "XoaPGH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-weight:bold; text-align:center">Xóa phiếu giao hàng</h1>

<h2 style="font-weight:bold; text-align:center">Bạn có muốn xóa phiếu giao hàng này?</h2>
<div>
    <dl class="dl-horizontal">
        @*Mã đơn đặt hàng*@
        <dt>
            Mã đơn đặt hàng :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PHIEU_GIAO_HANG.MaDDH)
        </dd>
        @*Mã nhân viên*@
        <dt>
            Nhân viên :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PHIEU_GIAO_HANG.NHAN_VIEN.TenNV)
        </dd>
        @*Ghi chú*@
        <dt>
            Ghi chú :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PHIEU_GIAO_HANG.GhiChu)
        </dd>
        @*Đơn vị tính*@
        <dt>
            Đơn vị tính :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DVT)
        </dd>
        @*Số lượng*@
        <dt>
            Số lượng :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
        @*Đơn giá*@
        <dt>
            Đơn giá :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>
        @*Thành tiền*@
        <dt>
            Thành tiền :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThanhTien)
        </dd>
        <br>
        <dd>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    <button>
                        @Html.ActionLink("Trở về", "Ship")
                    </button>
                </div>
            }
        </dd>
    </dl>
</div>
